<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/personbg"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_gp_details"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/icon_player" />

        <TextView
            android:id="@+id/tv_gp_detailname"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="135dp"
            android:textColor="#fffffb"
            android:gravity="center_horizontal"
            android:text="姓名"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_gp_detailmajor"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/shape_bg"
            android:gravity="center_vertical"
            android:text="专业"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/specialize"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/shape_bg"
            android:gravity="center_vertical"
            android:text="擅长：暂无"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_gpdetail_link"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/shape_bg"
            android:gravity="center_vertical"
            android:text="8613694"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="简介："
            android:textSize="16sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_gp_detailstory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="事迹"
                android:textSize="16sp" />
        </ScrollView>
    </LinearLayout>

</LinearLayout>
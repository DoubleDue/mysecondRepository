<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout2"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_below="@id/teamdetailist"
    android:layout_marginTop="10dp" >

    <ImageView
        android:id="@+id/icon_player"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="13dp"
        android:src="@drawable/icon_player" />

    <TextView
        android:id="@+id/member_specialize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/member_major"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/icon_player"
        android:paddingBottom="5dp"
        android:text="特长：UI界面设计、Java编程开发"
        android:textColor="#7f7f81"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/member_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/member_major"
        android:layout_marginTop="8dp"
        android:text="陈少勇"
        android:textColor="#2d2d2d"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/member_major"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/member_specialize"
        android:layout_below="@+id/member_name"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="2dp"
        android:text="年级-专业：2013-网络工程"
        android:textColor="#2d2d2d"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/member_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/member_name"
        android:layout_marginRight="10dp"
        android:text="Tel：18840821321"
        android:textColor="#777777"
        android:textSize="13sp"
        android:textStyle="italic" />

</RelativeLayout>
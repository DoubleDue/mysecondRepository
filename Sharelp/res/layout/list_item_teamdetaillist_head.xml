<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    
       <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
               
                 <TextView
                    android:id="@+id/detail_teamname"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_bg"
                    android:gravity="center_vertical"
                    android:text="队伍名"
                    android:textSize="20sp" />

                   <TextView
                    android:id="@+id/detail_teamcategory"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_bg"
                    android:gravity="center_vertical"
                    android:text="队伍类别"
                    android:textSize="20sp" />
                 
                     <TextView
                    android:id="@+id/detail_teamtutor"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_bg"
                    android:gravity="center_vertical"
                    android:text="导师"
                    android:textSize="20sp" />
                   
                <TextView
                    android:id="@+id/detail_teamintro"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_bg"
                    android:gravity="center_vertical"
                    android:text="队伍需求"
                    android:textSize="20sp" />
                
                   <TextView
                    android:id="@+id/detail_teamnumber"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_bg"
                    android:gravity="center_vertical"
                    android:text="队伍人员"
                    android:textSize="20sp" />

  

                <TextView
                    android:id="@+id/detail_teamhonor"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_bg"
                    android:gravity="center_vertical"
                    android:text="擅长"
                    android:textSize="20sp" />
                
                
                <TextView
                    android:id="@+id/detail_projectintro"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_bg"
                    android:gravity="center_vertical"
                    android:text="项目简介"
                    android:textSize="20sp" />
            </LinearLayout>
    

        <Button
            android:id="@+id/btn_reqmenberof"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:layout_marginRight="5.0dip"
            android:layout_marginTop="15.0dip"
            android:background="@drawable/btn_login_selector"
            android:gravity="center"
            android:paddingTop="5.0dip"
            android:text="申请加入"
            android:textColor="@android:color/white"
            android:textSize="18.0sp" />
       
  <!--   <Button
        android:id="@+id/btn_reqmenberof"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="申请加入" /> -->

</LinearLayout>
